        <domain includeSubdomains="true">buonacaccia.net</domain>
        <trust-anchors>
            <!-- use a PEM in res/raw that contains the correct CA ROOT or INTERMEDIATE -->
            <certificates src="@raw/isrg_root_x1" />
        </trust-anchors>
    </domain-config>
</network-security-config>